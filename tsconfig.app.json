{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "include": [
    "packages/components/**/*.ts",
    "packages/components/**/*.vue",
    "vue-shim.d.ts",
  ],
  "exclude": ["packages/components/**/tests/**"],
  "compilerOptions": {
    "composite": true,
    "declaration": true,
    "baseUrl": ".",
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",
    "paths": {
      "@/*": ["./src/*"]
    }
  }
}
